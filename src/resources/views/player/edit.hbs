<div class="mt-4">
    <h3>Change history</h3>
    <form class="mt-4" method="POST", action="/person/{{player._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" value= "{{player.name}}"id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control"id="description" name="description">{{player.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" value= "{{player.videoId}}"id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" class="form-control" value= "{{player.level}}"id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>