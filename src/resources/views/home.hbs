<div class="mt-4">
    <div class="row">
        {{#each pl}}
        <div class="col-sm-6 col-lg-4">
            <div class="card">
                <a href="/person/{{this.slug}}">
                    <img class="card-img-top" src="{{this.img}}" alt="{{this.img}}">
                </a>
                <div class="card-body">
                    <a href="/person/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
                </div>
        </div>
        {{/each}}
    </div>
</div>